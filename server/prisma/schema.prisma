// server/prisma/schema.prisma

generator client {
  provider        = "prisma-client-js"
  // 1. Enable the preview feature for extensions
  previewFeatures = ["postgresqlExtensions"] 
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  // 2. Explicitly tell Prisma we need the vector extension
  extensions = [vector]
}

// User Roles for RBAC (Role Based Access Control)
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String   // Hashed
  name      String?
  role      String   @default("viewer") // admin, editor, viewer
  status    String   @default("PENDING") // PENDING, ACTIVE
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  collections Collection[]
  assets    Asset[]  // Relation: User uploaded these
}


// GLOBAL CATEGORIES (System Folders)
model Category {
  id        String   @id @default(uuid())
  name      String   @unique
  group     String   // "Features" or "Inspiration"
  coverImage String?
  assets    AssetOnCategory[]
  createdAt DateTime @default(now())
}

model AssetOnCategory {
  assetId    String
  categoryId String
  asset      Asset    @relation(fields: [assetId], references: [id])
  category   Category @relation(fields: [categoryId], references: [id])
  assignedAt DateTime @default(now())

  @@id([assetId, categoryId])
}

model Asset {
  id            String   @id @default(uuid())
  filename      String
  originalName  String
  mimeType      String
  size          Int
  
  categories AssetOnCategory[]
  // Storage Paths (Abstracted so they work for Local or S3)
  path          String   
  thumbnailPath String?

  // AI Metadata
  // We store tags/colors/descriptions as JSON so we can evolve the AI structure easily
  aiData        String?  // Stored as JSON string in SQLite (Native JSON in Postgres)

  // NEW: Store the OpenAI embedding (1536 dimensions for text-embedding-3-small)
  embedding     Unsupported("vector(1536)")?
  
  // Relations
  uploadedBy    User     @relation(fields: [userId], references: [id])
  userId        String

  // Timestamps
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  // Placeholder for Collections (Phase 5)
  collections   AssetOnCollection[]
}

// Many-to-Many relationship for Collections (Phase 5)
model Collection {
  id        String   @id @default(uuid())
  name      String
  slug      String   @unique
  

  // New Ownership Fields
  userId    String   // <--- Required: The Owner
  owner     User     @relation(fields: [userId], references: [id])

  // NEW: Self-Relation for Sub-folders
  parentId  String?
  parent    Collection?   @relation("SubCollections", fields: [parentId], references: [id], onDelete: Cascade) // Delete parent -> delete children
  children  Collection[]  @relation("SubCollections")

  createdAt DateTime @default(now()) // Good practice to have this
  updatedAt DateTime @updatedAt

  assets    AssetOnCollection[]
}

model AssetOnCollection {
  asset        Asset      @relation(fields: [assetId], references: [id])
  assetId      String
  collection   Collection @relation(fields: [collectionId], references: [id])
  collectionId String
  assignedAt   DateTime   @default(now())

  @@id([assetId, collectionId])
}

model SearchLog {
  id        String   @id @default(uuid())
  query     String
  resultCount Int
  userId    String?
  createdAt DateTime @default(now())
}

model AssetClick {
  id          String   @id @default(uuid())
  assetId     String
  query       String
  position    Int      // 1 = Top result, 10 = 10th result
  userId      String?
  createdAt   DateTime @default(now())
}