// server/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL") // <--- THIS IS THE MAGIC LINE
}

// User Roles for RBAC (Role Based Access Control)
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String   // Hashed
  name      String?
  role      String   @default("viewer") // admin, editor, viewer
  status    String   @default("PENDING") // PENDING, ACTIVE
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  assets    Asset[]  // Relation: User uploaded these
}

model Asset {
  id            String   @id @default(uuid())
  filename      String
  originalName  String
  mimeType      String
  size          Int
  
  // Storage Paths (Abstracted so they work for Local or S3)
  path          String   
  thumbnailPath String?

  // AI Metadata
  // We store tags/colors/descriptions as JSON so we can evolve the AI structure easily
  aiData        String?  // Stored as JSON string in SQLite (Native JSON in Postgres)
  
  // Relations
  uploadedBy    User     @relation(fields: [userId], references: [id])
  userId        String

  // Timestamps
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  // Placeholder for Collections (Phase 5)
  collections   AssetOnCollection[]
}

// Many-to-Many relationship for Collections (Phase 5)
model Collection {
  id        String   @id @default(uuid())
  name      String
  slug      String   @unique
  assets    AssetOnCollection[]
}

model AssetOnCollection {
  asset        Asset      @relation(fields: [assetId], references: [id])
  assetId      String
  collection   Collection @relation(fields: [collectionId], references: [id])
  collectionId String
  assignedAt   DateTime   @default(now())

  @@id([assetId, collectionId])
}